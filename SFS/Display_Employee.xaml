        <ListBox x:Name="listBox4" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="81" Margin="10,187,0,0" SelectionChanged="listBox4_SelectionChanged"/>
        <Label x:Name="name_Copy3" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,128,0,0" FontSize="15" FontFamily="Traditional Arabic" FontWeight="Bold" Width="71"/>
        <Label x:Name="name_Copy4" Content="Bonus" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="443,132,0,0" FontSize="15" FontFamily="Traditional Arabic" FontWeight="Bold" Width="95"/>
        <ListBox x:Name="listBox5" HorizontalAlignment="Left" Height="191" VerticalAlignment="Top" Width="75" Margin="436,196,0,0"/>
