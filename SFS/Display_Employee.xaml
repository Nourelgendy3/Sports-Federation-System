        <TextBox x:Name="textBox" TextAlignment="Center" Height="32" Margin="153,59,280.333,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="textBox_TextChanged" FontSize="16" FontFamily="Traditional Arabic"/>
        <Label x:Name="label" Content="Enter ID:&#xD;&#xA;" HorizontalAlignment="Left" Margin="25,48,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Label x:Name="name" Content="Working&#xD;&#xA;   Years" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,127,0,0" FontSize="15" FontFamily="Traditional Arabic" FontWeight="Bold" Width="74"/>
