        <Label x:Name="name_Copy2" Content="Department" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="343,131,0,0" FontSize="15" FontFamily="Traditional Arabic" FontWeight="Bold" Width="95"/>
        <Button x:Name="button3" BorderThickness="0" Content="" HorizontalAlignment="Right" Width="20" Height="Auto" Margin="0,10,563.333,473.333" Click="button3_Click">
            <Button.Background>
